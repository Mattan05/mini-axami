{% extends 'base.html.twig' %}

{% block title %}Licensekeys index{% endblock %}

{% block body %}
    <h1>Licensekeys index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>License_key</th>
                <th>IsActive</th>
                <th>Valid_until</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for licensekey in licensekeys %}
            <tr>
                <td>{{ licensekey.id }}</td>
                <td>{{ licensekey.licenseKey }}</td>
                <td>{{ licensekey.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ licensekey.validUntil ? licensekey.validUntil|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_licensekeys_show', {'id': licensekey.id}) }}">show</a>
                    <a href="{{ path('app_licensekeys_edit', {'id': licensekey.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_licensekeys_new') }}">Create new</a>
{% endblock %}
